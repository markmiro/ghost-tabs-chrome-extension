{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./build",
    "typeRoots": [ "node_modules/@types" ],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "noImplicitThis": true, 
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "removeComments": true,
    "listEmittedFiles": true,
    "paths": {
      "*": ["./src/js/types/*.d.ts"]
    }
  },
  "exclude": [
    "src/js/helpers/background-headers.ts",
    "src/**/debug-*.ts",
    "src/**/*-debug.ts"
  ]
}
